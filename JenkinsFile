pipeline {
    agent any

    stages {
        stage("Hello") {
            steps {
                echo "Hello World"
            }
        }

        stage("Test") {
            steps {
                echo "Hello Test"
		sh("ERROR")
            }
        }

   
        stage("Deploy") {
            steps {
                echo "Hello Deploy"
            }
        }
    }

    post {
      always {
        echo "I will always say hello"
      }
      success {
        echo "Success"
      }
      failure {
        echo "Failure"
      }
      cleanup {
        echo "Don't care success or failure"
      }
    }
}